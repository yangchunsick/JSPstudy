<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="dao.members">
	
	<!-- 목록 불러오기 -->
	<select id="selectAllMember" resultType="dto.MemberDTO">
		SELECT NO, ID, NAME, GRADE, POINT
		  FROM MEMBERS
		 ORDER BY NO ASC
	</select>
	
	
	<!-- 회원가입 -->
	<insert id="insertMember" parameterType="int">
		INSERT INTO MEMBERS
		VALUES (MEMBER_SEQ.NEXTVAL, #{ID}, #{NAME}, TO_CAR('bronze'), 1000)
	</insert>
	
	<!-- 삭제 -->
	<delete id="deleteMember" parameterType="int">
		DELETE
		  FROM MEMBERS
		 WHERE NO = #{NO}
	</delete>
	<!-- 상세 정보 화면으로 들어감 -->
	<select id="selectMemberInfoByNum" parameterType="int" resultType="dto.MemberDTO">
	
	</select>
</mapper>