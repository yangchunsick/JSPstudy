<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- 패키지명.xml명 dao에 있는 free.xml -->
<mapper namespace="dao.free">

	<!-- 목록 가져오기 -->
	<select id="selectFreeList" resultType="dto.Free">
		SELECT FNO, WRITER, CONTENT, IP, HIT, CREATED, LASTMODIFIED, STATE, DEPTH, GROUPNO, GROUPORD
		  FROM FREE
	</select>

	<!-- 게시물 수 가져오기 -->
	<select id="selectTotalCount" resultType="int">
		SELECT COUNT(*)
		  FROM FREE
	</select>
	
	<!-- 게시물 추가하기 -->
	<insert id="insertFree" parameterType="dto.Free">
		INSERT INTO
		  FREE
		VALUES (
				FREE_SEQ.NEXTVAL,
				#{writer},
				#{content},
				#{ip},
				0, <!-- hit -->
				SYSDATE, <!-- created -->
				SYSDATE, <!-- lastModified -->
				0,		 <!-- state -->
				0,		 <!-- depth -->
				FREE_SEQ.CURRVAL, <!-- groupNo -->
				0 		 <!-- groupOrd  -->
				)	
	</insert>
	
	<!-- 게시물 상세 보기 -->
	<select id="selectFreeByfNo" parameterType="Long" resultType="dto.Free">
		SELECT FNO, WRITER, CONTENT, IP, HIT, CREATED, LASTMODIFIED, STATE, DEPTH, GROUPNO, GROUPORD
		  FROM FREE
		 WHERE FNO = #{fNo}
	</select>

	<!-- 수정 -->
	<update id="updateHit"></update>
</mapper>







